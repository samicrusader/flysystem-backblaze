{
    "name": "samicrusader/flysystem-backblaze",
    "type": "library",
    "description": "Connects Backblaze B2 object storage to Flysystem",
    "keywords": ["flysystem", "filesystem", "api", "backblaze", "client"],
    "homepage": "https://github.com/samicrusader/flysystem-backblaze",
    "license": "MIT",
    "authors": [
        {
            "name": "Sami",
            "email": "github+fsb2@samicrusader.me",
            "homepage": "https://samicrusader.me/",
            "role": "Maintainer"
        }
    ],
    "require": {
        "php": "^8.1",
        "league/flysystem": "1.0.70",
        "obregonco/backblaze-b2": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0",
        "scrutinizer/ocular": "~1.1",
        "squizlabs/php_codesniffer": "~2.3"
    },
    "autoload": {
        "psr-4": {
            "Samicrusader\\Flysystem\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Samicrusader\\Flysystem\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "format": "phpcbf --standard=psr2 src/"
    },
    "config": {
        "sort-packages": true
    }
}
